/* CSS Document */

#cleaner{clear:both;}
.main-container-left{display:block;width:220px; min-height:100%; float:left;border-right-width: 1px;border-right-style: solid;border-right-color: #d6d6d6;}
.m-c-l-top{background:#f5f5f5; border:#dadada; height:40px; line-height:40px; border-bottom:1px solid #d6d6d6;}
.m-c-l-top select{background:none; color:#000; width:100px; height:25px; margin-left:30px; margin-bottom:2px;}
.m-c-l-bottom ul li{list-style-type:none; line-height:30px; height:30px;}
.m-c-l-bottom ul li a{color:#000;}
.m-c-l-bottom ul li a:hover{text-decoration:none;}
.m-c-l-bottom ul li span{float:right; margin-right:5px; color:#81994b;}
.btn-blue{width:50px; height:30px; font-size:12px; padding:7px 12px; background:#3598dc; color:#fff;}
.page-header a:hover{color:#fff; text-decoration:none;}
.page-header a:active{color:#fff;}
.panel-body{width:580px; background:#fff; border:1px solid #dbdbdb;}
.panel-body a:hover{text-decoration:none;}
.panel-body select{width:170px; height:25px; margin:0 15px;}
.panel-body .btn-style1{width:50px; height:30px; font-size:12px; padding:7px 12px; background:#3598dc; color:#fff;}
.panel-body .btn-style2{width:50px; height:30px; font-size:12px; padding:7px 12px; background:#888888; color:#fff;}
.panel-body .btn-style3{width:50px; height:30px; font-size:12px; padding:7px 12px; background:#5bc0de; color:#fff;}

.operating{width:210px; position:absolute; left:-175px; top:-35px; padding:7px 10px; font-size:12px; background:#24292d;}
.operating a{color:#fff; padding:0 5px;}
.operating a:hover{text-decoration:none; color:#ffeb50; font-weight:bold;}
.m-c-l_show{width:40px;height:40px;float:left;background-image: url(../images/right.png);background-repeat: no-repeat;background-position: 5px;}
.m-c-l_hide{background:url(../images/left.png) no-repeat 5px;}
.m-c-l_width{width:0;}
#userMeun li{margin-left:-25px; padding-left:25px;}
#userMeun li:hover{background:#e8e8e8;}

.page-content tr td.table_title{width:120px; text-align:left; padding-left:20px; background:#fff;}
.page-content tr td{padding:10px; border-bottom:1px solid #f1f1f1; background:#fcfcfc;}

